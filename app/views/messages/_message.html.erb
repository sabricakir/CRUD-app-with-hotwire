<div id="<%= dom_id message %>">
  <p>
    <strong>Body:</strong>
    <%= message.body %>
  </p>

  <p>
    <%= link_to "Show this message", message %>
  </p>
  <%= turbo_frame_tag "edit_message" do%>
    <%= link_to "Edit this message", edit_message_path(message)%> |
  <%end%>
  
  <%= button_to "Destroy this message", message, method: :delete %>
</div>
